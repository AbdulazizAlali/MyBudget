    <TextView
        android:id="@+id/text"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:fontFamily="monospace"
        android:textSize="42sp"/>

</FrameLayout>